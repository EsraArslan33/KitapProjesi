@model Kitap_ENTITIES.BookVM.BookVM

@{ ViewData["Title"] = "Update";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Update</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Book.BookName" class="control-label"></label>
                <input asp-for="Book.BookName" class="form-control" />
                <span asp-validation-for="Book.BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Writer" class="control-label"></label>
                <input asp-for="Book.Writer" class="form-control" />
                <span asp-validation-for="Book.Writer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Category.CategoryName"></label>
                @Html.DropDownListFor(x => x.Book.CategoryID, Model.selectListItems, "*Kategori Seçiniz*", new { @class = "form-control" })
                <span asp-validation-for="Book.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye geri dön</a>
</div>

