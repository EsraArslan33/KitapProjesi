@model Kitap_ENTITIES.BookVM.BookVM

@{ ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>Kitap Ekleme</h1>

	<hr />
		<div class="row">
			<div class="col-md-4">
				<form asp-action="Create" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="Book.BookName" class="control-label">Kitap Adı</label>
						<input asp-for="Book.BookName" class="form-control" />
						<span asp-validation-for="Book.BookName" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Book.Writer" class="control-label">Yazar Adı</label>
						<input asp-for="Book.Writer" class="form-control" />
						<span asp-validation-for="Book.Writer" class="text-danger"></span>
					</div>
					<div class="form-group row">
						<div class="col-4">
							<label asp-for="Book.Category.CategoryName">Kategori Seçiniz</label>
						</div>
							<div class="col-md-10">
								@Html.DropDownListFor(m => m.Book.CategoryID, Model.selectListItems, new { @class = "form-control" })
							</div>
					</div>
					<br />
					<div class="form-group">
						<input type="submit" value="Kaydet" class="btn btn-success form-control" />
					</div>
				</form>
			</div>
		</div>
		<br />
		<div>
			<a asp-action="Index" class="btn btn-primary" form-control>Listeye Geri Dön</a>
		</div>